{
  "compilerOptions": {
    "resolveJsonModule": true,
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
    "types": [ "node", "jest", "long" ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [ "src/*" ]
    }
  },
  "include": [ "src/**/*", "@types/**/*" ],
  "exclude": [
    "node_modules/@cucumber/**/*",
    "src/@drongo/**/*",
    "**/__e2e__/**/*"
  ]
}
