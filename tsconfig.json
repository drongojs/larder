{
  "compilerOptions": {
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": false,
    "esModuleInterop": true,
    "types": [ "node" ],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [ "src/*" ]
    }
  },
  "include": [ "src/**/*", "@types/**/*" ]
}
